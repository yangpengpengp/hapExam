<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hand.hap.hapExam.mapper.OrgCompanysMapper">
    <resultMap id="BaseResultMap" type="com.hand.hap.hapExam.dto.OrgCompanys">
        <result column="COMPANY_ID" property="companyId" jdbcType="DECIMAL" />
        <result column="COMPANY_NUMBER" property="companyNumber" jdbcType="VARCHAR" />
        <result column="COMPANY_NAME" property="companyName" jdbcType="VARCHAR" />
        <result column="ENABLED_FLAG" property="enabledFlag" jdbcType="VARCHAR" />
    </resultMap>


    <select id="selectLovCompanies" resultMap="BaseResultMap">
        select
            COMPANY_ID,
            COMPANY_NUMBER,
            COMPANY_NAME,
            ENABLED_FLAG
        FROM
            hap_org_companys
        <where>
            <if test="companyId!=null">
                AND COMPANY_ID=#{companyId}
            </if>

            <if test="companyName!=null">
                AND COMPANY_NAME like concat('%', concat(#{companyName}, '%'))
            </if>
        </where>
    </select>

    <select id="selectLovCompaniesY" resultMap="BaseResultMap">
        select
        COMPANY_ID,
        COMPANY_NUMBER,
        COMPANY_NAME,
        ENABLED_FLAG
        FROM
        hap_org_companys
        <where>
            ENABLED_FLAG = 'Y'
            <if test="companyId!=null">
                AND COMPANY_ID=#{companyId}
            </if>

            <if test="companyName!=null">
                AND COMPANY_NAME like concat('%', concat(#{companyName}, '%'))
            </if>
        </where>
    </select>

</mapper>